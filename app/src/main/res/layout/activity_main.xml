<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:background="#fde100"
                android:gravity="center_horizontal"
             android:foregroundGravity="fill_horizontal">

    <RelativeLayout
        android:id="@+id/mm_rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top">
        <ImageView
            android:layout_width="346dp"
            android:layout_height="106dp"
            android:id="@+id/mm_iv_1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sorumatik_ingilizce"/>

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/mm_iv_2"
            android:layout_below="@+id/mm_iv_1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/zg_5"
            android:layout_marginTop="-30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mm_rl_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mmRL1"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="349dp"
            android:layout_height="284dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/alert_haydi"
            android:gravity="center_horizontal"
            android:id="@+id/mm_ll_1">

            <ImageButton
                android:layout_width="85dp"
                android:layout_height="96dp"
                android:id="@+id/mm_btn_learn"
                android:background="@drawable/button_ogren"
                android:layout_gravity="center"
                android:onClick="mainMenuButtonClick"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"/>

            <ImageButton
                android:layout_width="62dp"
                android:layout_height="96dp"
                android:id="@+id/mm_btn_test"
                android:layout_gravity="center"
                android:background="@drawable/button_test"
                android:onClick="mainMenuButtonClick"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mm_rl_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/copy_right"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"/>
    </RelativeLayout>


</FrameLayout>
