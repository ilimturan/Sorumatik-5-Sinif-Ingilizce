<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fde100"
                android:foregroundGravity="center|center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="zargidigames.com.sorumatik.ingilizce5.TestActivity">

    <RelativeLayout
        android:id="@+id/test_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <ScrollView
            android:id="@+id/test_sv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/test_ll_p_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/test_ll_c_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_question"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/test_ll_c_1_r_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_1_r_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:id="@+id/txt_word_tukish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/loading_text_1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#fde100"
                            android:textStyle="bold"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_1_r_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/test_ll_c_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/test_ll_c_2_r_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="right">

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_2_r_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_2_r_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="left">

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/test_ll_c_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/test_ll_c_3_r_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageButton
                            android:id="@+id/ib_sound_test_1"
                            android:layout_width="40dp"
                            android:layout_height="36dp"
                            android:background="@drawable/sound_girl_aktif"
                            android:onClick="tToSpeechButtonClicked"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_3_r_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|center_horizontal">

                        <Button
                            android:id="@+id/btn_word_english_1"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#1f6fb8"
                            android:singleLine="true"
                            android:text="@string/loading_text_2"
                            android:textColor="#fde100"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_3_r_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/iv_result_1"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_true"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/test_ll_c_4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/test_ll_c_4_r_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageButton
                            android:id="@+id/ib_sound_test_2"
                            android:layout_width="40dp"
                            android:layout_height="36dp"
                            android:background="@drawable/sound_girl_aktif"
                            android:onClick="tToSpeechButtonClicked"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_4_r_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|center_horizontal">

                        <Button
                            android:id="@+id/btn_word_english_2"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#1f6fb8"
                            android:singleLine="true"
                            android:text="@string/loading_text_2"
                            android:textColor="#fde100"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_4_r_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/iv_result_2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_true"/>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/test_ll_c_5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/test_ll_c_5_r_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal">



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_5_r_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|center_horizontal">
                        <ImageButton
                            android:id="@+id/ib_sound_learn_1"
                            android:layout_width="57dp"
                            android:layout_height="48dp"
                            android:background="@drawable/sound_girl_aktif"
                            android:onClick="tToSpeechButtonClicked"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/test_ll_c_5_r_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|center_horizontal">

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <!-- Footer -->
    <RelativeLayout
        android:id="@+id/test_rl_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.15"
                android:gravity="center_vertical|center_horizontal">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_before"
                    android:contentDescription="Back"
                    android:onClick="navButtonClicked"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:gravity="center_vertical|center_horizontal">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.15"
                android:gravity="center_vertical|center_horizontal">

                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_after"
                    android:contentDescription="Next"
                    android:onClick="navButtonClicked"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alert_rl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alert_iv"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progress_bar_test"
            style="?android:attr/spinnerItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:max="100"
            android:visibility="gone"
            android:indeterminate="false"/>
    </RelativeLayout>


</RelativeLayout>
